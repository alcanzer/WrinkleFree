<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="biz.wrinklefree.wrinklefree">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SignInActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".UpdateAddressActivity"
            android:theme="@style/AppTheme"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".HomepageActivity"
            android:theme="@style/AppTheme"
            android:screenOrientation="portrait"/>
        <activity android:name=".PickupActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".MyOrdersActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".OTPActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".Homepage"
            android:label="@string/title_activity_homepage"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity android:name=".SignUpActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".SuccessActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".RejectActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".PickupsActivity"
            android:screenOrientation="portrait"></activity>
    </application>

</manifest>