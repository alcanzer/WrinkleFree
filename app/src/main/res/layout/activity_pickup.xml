<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="biz.wrinklefree.wrinklefree.PickupActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Pick Date"
            android:drawableLeft="@drawable/datefield"
            android:drawablePadding="10dp"/>
        <Spinner
            android:id="@+id/pickdates"
            android:layout_gravity="center"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:padding="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pickup Slot"
            android:drawableLeft="@drawable/datefield"
            android:drawablePadding="10dp"/>
        <Spinner
            android:id="@+id/spinner"
            android:layout_gravity="center"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:padding="20dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Service Type"
            android:drawableLeft="@drawable/service"
            android:drawablePadding="10dp"/>

        <Spinner
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:id="@+id/servicetype"
            android:padding="20dp"
            android:layout_gravity="center"/>


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="10dp"
            app:hintAnimationEnabled="true">

            <EditText
                android:layout_width="400dp"
                android:layout_height="50dp"
                android:hint="Coupon Code"
                android:id="@+id/couponET"
                android:drawableLeft="@drawable/coupon"
                android:drawablePadding="10dp"
                android:layout_gravity="center"
                android:textColorHint="#000"/>

        </android.support.design.widget.TextInputLayout>

        <br.com.simplepass.loading_button_lib.customViews.CircularProgressButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Check"
            android:id="@+id/checkcoupon"
            app:spinning_bar_width="4dp"
            app:spinning_bar_padding="5dp"
            app:spinning_bar_color="#000"/>

    </LinearLayout>



    <Button
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:id="@+id/pickreq"
        android:text="Submit"
        android:textColor="#fff"
        android:padding="20dp"
        android:background="@color/colorPrimaryDark"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"/>



</RelativeLayout>
