<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/splashbg"
    tools:context="biz.wrinklefree.wrinklefree.UserRegTwo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/usestore"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Use Store Outlet"
            android:textSize="20sp"
            android:layout_gravity="center"/>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="10dp"
            android:theme="@style/TextLabel"
            app:hintAnimationEnabled="true">

            <EditText
                android:layout_width="400dp"
                android:layout_height="50dp"
                android:hint="Address 1"
                android:id="@+id/addone"
                android:drawableLeft="@drawable/addressfield"
                android:drawablePadding="10dp"
                android:layout_gravity="center"
                android:textColorHint="#000"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="10dp"
            android:theme="@style/TextLabel"
            app:hintAnimationEnabled="true">

            <EditText
                android:layout_width="400dp"
                android:layout_height="50dp"
                android:hint="Address 2"
                android:id="@+id/addtwo"
                android:drawableLeft="@drawable/addressfield"
                android:drawablePadding="10dp"
                android:layout_gravity="center"
                android:textColorHint="#000"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="10dp"
            android:theme="@style/TextLabel"
            app:hintAnimationEnabled="true">

            <EditText
                android:layout_width="400dp"
                android:layout_height="50dp"
                android:hint="Landmark"
                android:id="@+id/landmark"
                android:drawableLeft="@drawable/emailfield"
                android:drawablePadding="10dp"
                android:layout_gravity="center"
                android:textColorHint="#000"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="10dp"
            android:theme="@style/TextLabel"
            app:hintAnimationEnabled="true">

            <EditText
                android:layout_width="400dp"
                android:layout_height="50dp"
                android:hint="Pincode"
                android:id="@+id/pincode"
                android:inputType="number"
                android:drawableLeft="@drawable/emailfield"
                android:drawablePadding="10dp"
                android:layout_gravity="center"
                android:textColorHint="#000"/>

        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <Button
        android:id="@+id/clik1"
        android:layout_marginTop="20dp"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        android:gravity="center"
        android:background="#f4f00e"
        android:layout_alignParentBottom="true"
        android:text="Next" />


</RelativeLayout>
