<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="biz.wrinklefree.wrinklefree.UserRegOne">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/mouse"
            android:layout_marginTop="40dp"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Request for pickup"
            android:textSize="35sp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"/>

        <!-- TODO: Update blank fragment layout -->
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_gravity="center"
            android:theme="@style/TextLabel"
            android:padding="10dp"
            app:hintTextAppearance="@style/TextLayout.Hint"
            app:hintAnimationEnabled="true">

            <EditText
                android:layout_width="400dp"
                android:layout_height="50dp"
                android:hint="First Name"
                android:id="@+id/fName"
                android:drawableLeft="@drawable/namefield"
                android:drawablePadding="10dp"
                android:layout_gravity="center"
                android:textColor="#fff"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:padding="10dp"
            android:theme="@style/TextLabel"
            app:hintAnimationEnabled="true">

            <EditText
                android:layout_width="400dp"
                android:layout_height="50dp"
                android:hint="Last Name"
                android:id="@+id/lName"
                android:drawableLeft="@drawable/namefield"
                android:drawablePadding="20dp"
                android:layout_gravity="center"
                android:textColorHint="#000"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="10dp"
            android:theme="@style/TextLabel"
            app:hintAnimationEnabled="true">

            <EditText
                android:layout_width="400dp"
                android:layout_height="50dp"
                android:hint="Email"
                android:id="@+id/email"
                android:drawableLeft="@drawable/emailfield"
                android:drawablePadding="10dp"
                android:layout_gravity="center"
                android:textColorHint="#000"/>

        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

    <Button
        android:id="@+id/clik"
        android:layout_marginTop="20dp"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        android:background="#f4f00e"
        android:text="Next" />

</RelativeLayout>
